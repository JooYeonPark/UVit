<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.uvit_2.FragmentMonitoring">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/monitoring"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/back_1"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/linearLayout_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:gravity="center"
                android:text="현재 위치"
                android:textColor="@color/colorFont"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/monitoring_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:gravity="left"
                android:text="DefalutText"
                android:textColor="@color/colorFont" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="305dp">

            <TextView
                android:id="@+id/monitoring_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2.2"
                android:gravity="center"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout02"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/monitoring_UVI"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:gravity="center"
                android:text="0.0"
                android:textColor="@color/colorToolbar"
                android:textSize="35dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/monitoring_UVB"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/monitoring_D"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center|right"
                android:text="0.0"
                android:textColor="@color/colorToolbar"
                android:textSize="35dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.3"
                android:gravity="center|left"
                android:text="%"
                android:textColor="#A29A9A"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="온도"
                    android:textColor="@color/colorBackground"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/monitoring_temp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Text"
                    android:textColor="@color/colorBackground"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="습도"
                    android:textColor="#ffff"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/monitoring_hum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Text"
                    android:textColor="#ffff"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <Button
                    android:id="@+id/sync"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:background="@drawable/btn_sync"
                    android:gravity="center_horizontal|center_vertical"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lastsync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/sync"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="0000-00-00- 00:00:00"
                    android:textColor="#ffff"
                    android:textSize="5pt" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
